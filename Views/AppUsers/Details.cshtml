@model AppUser
@{
    ViewData["Title"] = "AppUser Details";
}
<div class="card">
    <div class="card-header">@ViewData["Title"]</div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label" asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" readonly required class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label" asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" readonly required class="form-control" />
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label" asp-for="Email">Email</label>
                    <input asp-for="Email" readonly class="form-control" />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="form-label" asp-for="Username">Username</label>
                    <input asp-for="Username" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" readonly class="form-control" />
                </div>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <a asp-action="Index" class="btn btn-light text-dark w-100">Back to List</a>
            </div>
        </div>
    </div>
</div>
